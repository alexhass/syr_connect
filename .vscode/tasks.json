{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Pytest",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m pytest --timeout=10 tests",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Pytest (changed tests only)",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m pytest --timeout=10 --picked",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Pytest with Coverage",
      "detail": "Run tests with code coverage report",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m pytest tests --cov=custom_components.syr_connect --cov-report=term-missing --cov-report=html",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Ruff Check",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m ruff check .",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Ruff Format",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m ruff format .",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Mypy Type Check",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m mypy custom_components/syr_connect",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Dev Requirements",
      "type": "shell",
      "command": "${command:python.interpreterPath} -m pip install -r requirements-dev.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Pre-commit Run All",
      "type": "shell",
      "command": "pre-commit run --all-files",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
