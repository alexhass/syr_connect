{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["-vv", "${file}"]
    },
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["-vv", "tests"]
    },
    {
      "name": "Debug Changed Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["-vv", "--picked"]
    },
    {
      // Debug by attaching to local Home Assistant server using Remote Python Debugger.
      // See https://www.home-assistant.io/integrations/debugpy/
      // Make sure to install the custom integration in your HA instance first
      "name": "Attach to Local Home Assistant",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "port": 5678,
        "host": "localhost"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/custom_components/syr_connect",
          "remoteRoot": "/config/custom_components/syr_connect"
        }
      ]
    },
    {
      // Debug by attaching to remote Home Assistant server using Remote Python Debugger.
      // See https://www.home-assistant.io/integrations/debugpy/
      // Make sure to install the custom integration in your HA instance first
      "name": "Attach to Remote Home Assistant",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "port": 5678,
        "host": "homeassistant.local"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/custom_components/syr_connect",
          "remoteRoot": "/config/custom_components/syr_connect"
        }
      ]
    }
  ]
}
